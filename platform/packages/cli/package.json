  "description": "CLI tool (gom/ctl) for Appkod platform - scaffold, codegen, validate, deploy",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "appkod": "./dist/cli.js",
    "gom": "./dist/cli.js"
